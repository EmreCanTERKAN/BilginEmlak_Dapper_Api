@model List<ResultWhoWeAreDetailDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Biz Kimiz Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Alt Başlık</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Title</td>
                                    <td>@item.SubTitle</td>
                                    <td><a asp-controller="WhoWeAre" asp-action="DeleteWhoWeAreDetail" asp-route-id="@item.WhoWeAreDetailID" class="btn btn-danger">Sil</a></td>
                                    <td><a asp-controller="WhoWeAre" asp-action="UpdateWhoWeAreDetail" asp-route-id="@item.WhoWeAreDetailID" class="btn btn-info">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-controller="WhoWeAre" asp-action="CreateWhoWeAreDetail" class="btn btn-info">Yeni Biz Kimiz Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>


