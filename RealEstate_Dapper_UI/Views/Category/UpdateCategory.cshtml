@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h1>UpdateCategory</h1>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h1>Kategori Güncelleme Sayfası</h1>
                <form method="post">
                    <input type="hidden" asp-for="CategoryID" />
                    <label>Kategori Adı</label>
                    <input type="text" asp-for="CategoryName" class="form-control" />
                    </<br />
                    <button class="btn btn-success mt-3"> Kategoriyi Güncelle </button>
                </form>

            </div>
        </div>
    </div>
</div>

