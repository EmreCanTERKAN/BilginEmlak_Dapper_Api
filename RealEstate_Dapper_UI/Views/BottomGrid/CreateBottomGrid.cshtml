@model CreateBottomGridDto
@{
    ViewData["Title"] = "CreateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h1>Yeni Öne Çıkan Ekleme Sayfası</h1>
                <form method="post">
                    <label>Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    </<br />
                    <label>Icon</label>
                    <input type="text" asp-for="Icon" class="form-control" />
                    </<br />
                    <label>İçerik</label>
                    <input type="text" asp-for="Description" class="form-control" />
                    </<br />
                    <button class="btn btn-primary mt-3"> Veriyi Kaydet </button>
                </form>

            </div>
        </div>
    </div>
</div>




