@model List<RealEstate_Dapper_UI.Dtos.PopularLocationDtos.ResultPopularLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}




<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Populer Lokasyonlar Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Şehir Adı</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td><img src="@item.ImageUrl" /> @item.CityName</td>
                                    <td><a asp-controller="PopularLocation" asp-action="DeletePopularLocation" asp-route-id="@item.LocationID" class="btn btn-danger">Sil</a></td>
                                    <td><a asp-controller="PopularLocation" asp-action="UpdatePopularLocation" asp-route-id="@item.LocationID" class="btn btn-info">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/PopularLocation/CreatePopularLocation" class="btn btn-info">Yeni Lokasyon Girişi Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>

